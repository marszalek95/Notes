<div class="col-sm-4">
    <div class="card friend">
        <div class="card-body d-flex justify-content-between align-items-center">
            <p class="card-title fw-bold"> {{ userView.user.email }} </p>
            <div class="d-flex align-items-center gap-2">
                <form action="{{ url('app_friends_favorites' , {id: userView.friendshipId}) }}" method="post">
                    <input type="hidden" name="token" value="{{ csrf_token('favorites-toggle') }}">
                    <button type="submit" class="btn btn-sm btn-outline-primary p-1" title="Add to favorites">
                        {% if userView.isFavorite %}
                            <i class="bi bi-star-fill"></i>
                        {% else %}
                            <i class="bi bi-star"></i>
                        {% endif %}
                    </button>
                </form>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary p-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <form method="POST" action="{{ path('app_friends_remove', {id: userView.friendshipId}) }}">
                            <input type="hidden" name="token" value="{{ csrf_token('remove-request') }}">
                            <button type="submit" class="dropdown-item">Remove</button>
                        </form>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>