<div class="col-sm-4">
    <div class="card friend">
        <div class="card-body d-flex justify-content-between align-items-center">
            <p class="card-title fw-bold"> {{ userView.user.email }} </p>
            <div class="d-flex align-items-center gap-2">
                <button class="btn btn-outline-primary p-1" disabled>{{ userView.friendshipStatus.name }}</button>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary p-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        {% if userView.isReceiver %}
                            <form method="POST" action="{{ path('app_friends_accept', {id: userView.friendshipId}) }}">
                                <input type="hidden" name="token" value="{{ csrf_token('accept-request') }}">
                                <button type="submit" class="dropdown-item">Accept</button>
                            </form>
                            <form method="POST" action="{{ path('app_friends_reject', {id: userView.friendshipId}) }}">
                                <input type="hidden" name="token" value="{{ csrf_token('reject-request') }}">
                                <button type="submit" class="dropdown-item text-danger">Reject</button>
                            </form>
                        {% else %}
                            <form method="POST" action="{{ path('app_friends_remove', {id: userView.friendshipId}) }}">
                                <input type="hidden" name="token" value="{{ csrf_token('remove-request') }}">
                                <button type="submit" class="dropdown-item text-danger">Remove</button>
                            </form>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>