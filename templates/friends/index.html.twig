{% extends 'base.html.twig' %}

{% block title %}Friends{% endblock %}

{% block body %}
    <div class="row mt-4">
        {% for friendship in friendships %}
            {% set friend = friendship.sender == app.user ? friendship.receiver : friendship.sender %}
            <div class="col-sm-4">
                <div class="card friend">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <p class="card-title fw-bold"> {{ friend.email }} </p>
                        <div class="d-flex align-items-center gap-2">
                            <button type="button" class="btn btn-sm btn-outline-primary p-1" title="Add to favorites">
                                <i class="bi bi-star"></i>
                            </button>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary p-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item text-danger" href="#">Remove</a></li>
                                    <li><a class="dropdown-item" href="#">Block</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            {{ 'Cand find any friends' }}
        {% endfor %}
    </div>

    {% if friendships.haveToPaginate %}
        <div class="d-flex justify-content-center">
            {{ pagerfanta(friendships) }}
        </div>
    {% endif %}
{% endblock %}
