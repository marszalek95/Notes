<div class="col-sm-4">
    <div class="card friend">
        <div class="card-body d-flex justify-content-between align-items-center">
            <p class="card-title fw-bold"> {{ user.email }} </p>
            <div class="d-flex align-items-center gap-2">
                <button class="btn btn-outline-primary p-1" disabled>{{ userView.status.name }}</button>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary p-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <form method="POST" id="accept-request" action="{{ path('app_friends_accept', {id: userView.id}) }}">
                            <input type="hidden" name="token" value="{{ csrf_token('accept-request') }}">
                            <button type="submit" class="dropdown-item">Accept</button>
                        </form>
                        <form method="POST" id="reject-request" action="{{ path('app_friends_reject', {id: userView.id}) }}">
                            <input type="hidden" name="token" value="{{ csrf_token('reject-request') }}">
                            <button type="submit" class="dropdown-item text-danger">Reject</button>
                        </form>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>